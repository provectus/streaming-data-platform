SALT=asaushkin

if [ -z $1 ]; then
	echo ERROR: You must point to an event file with first parameter of the script
	exit 1
fi

if [ -z $2 ]; then
	echo ERROR: You must point to a lambda function name with second parameter of the script
	exit 1
fi

sam local invoke "$2" \
	-e $1 \
	-d 5005 \
	--template ../../fds-template.yaml \
	--parameter-overrides \
	"ParameterKey=ServicePrefix,ParameterValue=$SALT ParameterKey=AnalyticalDBName,ParameterValue=$SALT ParameterKey=S3BucketName,ParameterValue=fds$SALT"
